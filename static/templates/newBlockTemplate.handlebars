        {{!-- Actions --}}
        <div class="block-overlay-actions u-hide">
            <p class="overlay-label">New block order:</p>
            <div class="new-block-order">
                <input placeholder="Block order" type="text" autocomplete="off" class="block-order entity-title">
                <div class="entity-btn update-order js-update-order">Save</div>
            </div>
            <div class="entity-done js-required u-hide">Mark as required</div>
            <div class="entity-done js-hide-learner">Hide from learners</div>
